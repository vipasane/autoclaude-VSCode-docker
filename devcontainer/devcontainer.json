{
  "name": "Auto-Claude Development Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "auto-claude",
  "workspaceFolder": "/workspace",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "usernamehw.errorlens",
        "christian-kohler.path-intellisense",
        "formulahendry.auto-rename-tag"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[python]": {
          "editor.defaultFormatter": "ms-python.python"
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.watcherExclude": {
          "**/node_modules/**": true,
          "**/.git/**": true
        }
      }
    }
  },

  "forwardPorts": [3000, 8000, 6379],
  "portsAttributes": {
    "3000": { "label": "Frontend", "onAutoForward": "notify" },
    "8000": { "label": "Backend API", "onAutoForward": "notify" },
    "6379": { "label": "FalkorDB", "onAutoForward": "silent" }
  },

  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "bash .devcontainer/post-start.sh",

  "remoteUser": "vscode",

  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    "source=auto-claude-node-modules,target=/workspace/node_modules,type=volume",
    "source=auto-claude-venv,target=/workspace/apps/backend/.venv,type=volume",
    "source=claude-config,target=/home/vscode/.claude,type=volume"
  ],

  "containerEnv": {
    "GRAPHITI_ENABLED": "true",
    "FALKORDB_HOST": "falkordb",
    "FALKORDB_PORT": "6379"
  },

  "remoteEnv": {
    "CLAUDE_CODE_OAUTH_TOKEN": "${localEnv:CLAUDE_CODE_OAUTH_TOKEN}"
  }
}
